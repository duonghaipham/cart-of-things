@{ var place = (Place)ViewData["Place"]; }
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/updatePlace.js"></script>
}

@section Css {

    <link rel="stylesheet" href="~/css/global.css" />
    <!-- Jquery ui CSS -->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link href='https://fonts.googleapis.com/css?family=Mulish' rel='stylesheet'>
    <!-- Font Awesome JS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        .ui-state-error {
            padding: .3em;
        }
    </style>
}

<div style="margin:50px 500px 100px;">
    <div class="card border border-dark">
        <div class="card-header text-center">
            <h4>Edit place</h4>
        </div>
        <div class="card-body">
            <form method="POST" id="updatePlace">
                <div class="container">
                    <div class="row">
                        <div class="form-group col-sm">
                            <label for="id">ID</label>
                            <input type="text"
                                   class="form-control"
                                   id="IdPlace"
                                   name="IdPlace"
                                   value="@place.Id"
                                   readonly />
                        </div>
                        <div class="form-group col-sm">
                            <label for="txtAmount">Number staff</label>
                            <input type="number"
                                   class="form-control"
                                   id="txtAmount"
                                   name="txtAmount"
                                   value="@place.NumberStaff"
                                   readonly />
                        </div>
                    </div>
                </div>

                <div class="form-group" id="erorr-color">
                    <label for="namePlace">Place name</label>
                    <input type="text"
                           class="form-control"
                           id="namePlace"
                           name="namePlace"
                           value="@place.Name"
                           required />
                    <span style="color:red" id="erorrPlaceName"></span>
                </div>

                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text"
                           class="form-control"
                           id="address"
                           name="address"
                           value="@place.Address"
                           required />
                </div>

                <a class="btn btn-success"
                   href="/Places"
                   title="Back to list"
                   role="button">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                </a>
                <button type="submit" class="btn btn-primary"
                        title="update">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Save
                </button>
            </form>
        </div>
        <div class="card-footer text-muted">
            Footer
        </div>
    </div>
</div>