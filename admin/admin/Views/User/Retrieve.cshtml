@{
    ViewData["Title"] = "Staff";
}
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/lock.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
}

@section Css {
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/User/user.css" />
    <link rel="stylesheet" href="~/css/User/listUser.css" />
    <link rel="stylesheet" href="~/css/User/pagination.css" />
}

<main>
    <section class="main__top">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <div class="title__thin">
                        <h1><b>Staffs List</b></h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                <form class="user__features" id="form-query">
                    <div class="user__features__left">
                        <div class="user__features__search">
                            <input type="text"
                                   placeholder="Search"
                                   class="query-control"
                                   name="search"
                                   @*<% if (search !== undefined) { %>value=<%= search %><% } %>/>*@>
                        </div>
                        <button type="submit" class="search__icon" id="btn-submit">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 class="search__icon"
                                 fill="none"
                                 viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round"
                                      stroke-linejoin="round"
                                      stroke-width="2"
                                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="user__features__right">
                        <span>Sort by:</span>
                        <div class="user__features__sort">
                            <select id="select-sort"
                                    class="form-select query-control"
                                    name="sort"
                                    aria-label="Default select example">
                                <option>Default sorting</option>
                                @*<option value="name"
                                      <% if (sort === 'name') { %>selected<% } %>
                                    >Name</option>
                                                    <option value="email"
                                      <% if (sort === 'email') { %>selected<% } %>
                                    >Email</option>*@
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row" style="display: flex; align-items: center; justify-content: center;">
                <div class="add-user">
                    <button type="button"
                            class="btn btn-primary"
                            onclick="location.href='/users/create'">
                        <img src="~/img/add-icon.png" alt="Add icon" />
                        <span>&nbsp;Add a new user</span>
                    </button>
                </div>

            </div>

            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Avatar</th>
                            <th scope="col">Name</th>
                            <th scope="col">Identity card</th>
                            <th scope="col">Email</th>
                            <th scope="col">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 1;}
                        @foreach (var data in (List<Account>)ViewData["listStaff"])
                        {
                        <tr>
                            <th scope="row">@i</th>
                            @{i++;}
                            <td><img src="https://i.pinimg.com/originals/3c/82/97/3c82973b1e4b053838217ef119713c95.jpg" /></td>
                            <td>@data.Name</td>
                            <td>@data.IdentityCard</td>
                            <td>@data.Email</td>
                            <td>
                                <div class="user__options__edit"
                                     onclick="location.href='/users/@data.Id/update'">
                                    <svg xmlns="http://www.w3.org/2000/svg"
                                         width="24"
                                         height="24"
                                         viewBox="0 0 24 24">
                                        <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-5 17l1.006-4.036 3.106 3.105-4.112.931zm5.16-1.879l-3.202-3.202 5.841-5.919 3.201 3.2-5.84 5.921z"></path>
                                    </svg>
                                    <span>Edit user</span>
                                </div>

                                <div class="user__options__block"
                                     onclick="handleLock(this, @data.Id)">
                                    @if (@data.Lock == 1)
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24"
                                             height="24" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd" />
                                        </svg>
                                        <span>Lock</span>
                                    }
                                    else
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                             class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
                                        </svg>
                                        <span>Unlock</span>
                                    }
                                </div>
                            </td>
                        </tr>
                        }
