@{ Layout = "~/Views/Shared/_LayoutSignIn.cshtml";
    ViewData["Title"] = "SignIn"; }

@section Css {
    <link rel="stylesheet" type="text/css" href="~/css/global.css" />
    <link rel="stylesheet" type="text/css" href="~/css/signIn.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
}

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/signin.js"></script>
}
<main class="signin-admin">
    <section>
        <div class="container">
            <div class="login">
                <div class="login__img">
                    <img src="~/img/avatar-login.png"
                         alt="IMG" />
                </div>

                <form method="post" id="signin" class="login__form">
                    <span class="login__form__title">STAFF LOGIN</span>
                    <div style="color: red; text-align: center; font-size: 25px;" id="erorr"></div>
                    <div class="wrap-input">
                        <input class="login__input"
                               type="text"
                               name="email"
                               id="email"
                               placeholder="Email"
                               required />
                    </div>

                    <div class="wrap-input">
                        <input class="login__input"
                               type="password"
                               name="password"
                               id="password"
                               placeholder="Password"
                               required />
                    </div>

                    <div class="login-button">
                        <button class="button-login" type="submit">Login</button>
                    </div>

                    <div class="forgot-password" style="text-align:center;">
                        <span class="txt1"> Forgot </span>
                        <a class="txt2"
                           href="#">
                            Username
                            /
                            Password?
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>