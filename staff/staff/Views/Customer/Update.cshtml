@{
    ViewData["Title"] = "Update";
    var account = (Account)ViewData["staff"];
    var placeWork = (Place)ViewData["workPlace"];
}
@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/updateUser.js"></script>
    <script>
        function readURL_user(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#user-big-image")
                        .attr("src", e.target.result)
                        .width(150)
                        .height(150);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
@section Css {
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/User/user.css" />
}
<main>
    <section class="main__top">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <div class="title__thin">
                        <h1><b>Staff detail</b></h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="main__user">
        <form class="container" id="updateCustomer" method="post" enctype="multipart/form-data">
            <input type="hidden" id="IdUser" value="@account.Id" />
            <div class="row justify-content-center">
                <div class="user-detail" style="width: 50%">
                    <div class="
                        user-big
                        d-flex
                        align-items-center
                        pb-2
                        border-bottom
                    ">
                        <img src="@account.Avatar"
                             class="img"
                             alt="User image"
                             id="user-big-image" />
                        <div class="upload-img pl-0 ml-0" id="img-section">
                            <label for="inputGroupFile"
                                   class="form-label"
                                   style="color: rgb(5, 5, 153); margin-left: 30px">PROFILE PHOTO</label>
                            <input type="file"
                                   class="form-control"
                                   id="inputGroupFile"
                                   name="avatar"
                                   aria-describedby="inputGroupFileAddon04"
                                   aria-label="Upload"
                                   onchange="readURL_user(this)" />
                            <i>Accept image-type file only</i>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text"
                               class="form-control"
                               id="name"
                               name="name"
                               value="@account.Name"
                               required />
                        <span style="color:red" id="checkName"></span>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email:</label>
                                <input type="email"
                                       class="form-control"
                                       id="email"
                                       name="email"
                                       value="@account.Email"
                                       required />
                                <span style="color:red" id="checkEmail"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3">
                                <label for="identityCard" class="form-label">Identity Card:</label>
                                <input type="text"
                                       class="form-control"
                                       id="identityCard"
                                       name="identityCard"
                                       value="@account.IdentityCard"
                                       required />
                                <span style="color:red" id="checkIdentityCard"></span>
                            </div>
                        </div>
                    </div>
                    @if (@account.IdPlace != null)
                    {
                        <div class="mb-3">
                            <label for="workplace" class="form-label">
                                Workplace:
                                <select id="workplace" name="workplace">
                                    <option value="@placeWork.Id" selected>
                                        @placeWork.Name
                                    </option>
                                </select>
                            </label>
                        </div>
                    }

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="save-user">
                        <button type="submit" class="btn btn-secondary">
                            <img src="~/img/save-icon.png"
                                 alt="Save icon"
                                 style="width: 30px; height: 30px" />
                            <span>&nbsp;Save</span>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </section>
</main>
