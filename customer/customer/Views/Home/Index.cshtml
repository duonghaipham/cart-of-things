@{
    ViewData["Title"] = "Home";
    ViewData["Tab"] = "home";
}

<section class="hero">
    <div id="carouselHeros" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselHeros" data-slide-to="0" class="active"></li>
            <li data-target="#carouselHeros" data-slide-to="1"></li>
            <li data-target="#carouselHeros" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/hero-1.jpg"
                     class="d-block w-100"
                     alt="hero-1"
                     style="
            height: 700px;
            object-fit: cover;
            background-color: white;
            position: relative;
          "/>
                <div class="hero__box">
                    <h1 class="title">Making your life more convenient from now on</h1>
                    <a href="/Shop">OUR GOODS</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/hero-2.jpg"
                     class="d-block w-100"
                     alt="hero-2"
                     style="height: 700px; object-fit: cover; background-color: white"/>
                <div class="hero__box">
                    <h1 class="title">Making your life more convenient from now on</h1>
                    <a href="/Shop">OUR GOODS</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/hero-3.jpg"
                     class="d-block w-100"
                     alt="hero-3"
                     style="height: 700px; object-fit: cover; background-color: white"/>
                <div class="hero__box">
                    <h1 class="title">Making your life more convenient from now on</h1>
                    <a href="/Shop">OUR GOODS</a>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev"
           href="#carouselHeros"
           role="button"
           data-slide="prev">
            <div style="
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: black;
          padding: 12px;
          border-radius: 100%;
        ">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </div>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next"
           href="#carouselHeros"
           role="button"
           data-slide="next">
            <div style="
          display: flex;
          justify-content: center;
          align-items: center;
          background-color: black;
          padding: 12px;
          border-radius: 100%;
        ">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </div>

            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<section class="about">
    <div class="about__text">
        <h3 class="section__title">About cart of things</h3>
        <h1 class="title__thin">Things you need, we have all</h1>
        <p>
            The "cart of things" is an e-commerce platform that started as a small family business. The owners are William Tyler, supported by a staff of thoudsands of employees.
        </p>
    </div>
    <div class="about__img">
        <img src="~/img/about-img.jpg" alt="about-img" width="450"/>
    </div>
</section>

