@{
    ViewData["Title"] = "Your information";
    ViewData["Tab"] = "home";
    var account = ViewData["Account"] as Account;
}

<div class="container rounded bg-white mt-5 mb-5" style="width: 50%">
    <div class="row align-items-center border">
        <div class="col-md-6 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
            <img class="border" width="400px"
                 src="@account.Avatar" />
            </div>
        </div>
        <div class="col-md-6 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12">
                        <span class="labels">Name: </span>
                        <h5 class="d-inline">@account.Name</h5>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <span class="labels">Email: </span>
                        <h5 class="d-inline">@account.Email</h5>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <span class="labels">Phone: </span>
                        <h5 class="d-inline"
                            style="
                font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman',
                  serif;
              ">
                            09571510044
                        </h5>
                    </div>
                </div>
            </div>
            <div>
                <a href="/users/@account.Id/Update" style="margin-right: 25px">UPDATE</a>
                <a href="/users/@account.Password/ChangePassword">CHANGE PASSWORD</a>
            </div>
        </div>
    </div>
</div>